{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Dit is een overzicht met artikelen:</h1>

    <ul>
        {% for article in articles %}
            {% if(article.draft) %}
                <li><a class="has-draft" href="{{ path('article_show',{'id': article.id}) }}">{{ article.title }}</a></li>
            {% else %}
                <li><a href="{{ path('article_show',{'id': article.id}) }}">{{ article.title }}</a></li>
            {% endif %}
        {% endfor %}
    </ul>
    <a href="{{ path('draft_new') }}">Nieuwe draft toevoegen</a>
</div>
{% endblock %}
