{% extends 'base.html.twig' %}

{% block title %}Hello Version!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Titel van het artikel: {{ article.title }}</h1>

        {% if article.versions[0] != version %}
            Vorige versie:
            <ul>
                {% for art_version in article.versions %}
                    {% if art_version.versionDate == version.versionDate %}
                        <li> <b>Datum & tijd:</b> {{ article.versions[(loop.index - 2)].versionDate | date('d-m-y H:m:s') }}</li>
                        <li> <b>Content:</b> {{ article.versions[(loop.index - 2)].content }}</li>
                    {% endif %}
                {% endfor %}
            </ul>

            Nieuwste versie:
        {% endif %}
        <ul>
            <li> <b>Datum & tijd:</b> {{ version.versionDate | date('d-m-y H:m:s') }}</li>
            <li> <b>Content:</b> {{ version.content }}</li>
        </ul>

    </div>
{% endblock %}
