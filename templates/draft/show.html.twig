{% extends 'base.html.twig' %}

{% block title %}Hello Draft!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Je bekijkt nu de volgende draft: '{{ draft.title }}' </h1>

        <h3>Dit bevat de draft:</h3>
        <ul>
            <li><b>Beschrijving:</b> {{ draft.description }}</li>
            <li><b>Content:</b> {{ draft.content }}</li>
            <li><b>Gebruiker:</b> {{ draft.user }}</li>
        </ul>

        <a href="{{ path('draft_edit',{'id': draft.id}) }}">Bewerken</a>
        <a href="{{ path('draft_publish',{'id': draft.id}) }}" class="btn btn-primary">Publiceren</a>
    </div>
{% endblock %}
