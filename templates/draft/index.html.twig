{% extends 'base.html.twig' %}

{% block title %}Hello Drafts!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Overzicht van alle bestaande drafts:</h1>

        <ul>
            {% for draft in drafts %}
                <li><a href="{{ path('draft_show',{'id': draft.id}) }}">{{ draft.title }}</a></li>
            {% endfor %}
            <a href="{{ path('draft_new') }}"><button>Nieuwe draft toevoegen</button></a>
        </ul>
    </div>
{% endblock %}
